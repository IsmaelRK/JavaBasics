  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <children>
      <Label fx:id="lblmsg" contentDisplay="CENTER" opacity="0.71" text="Bom Dia" textFill="#bc3838">
         <font>
            <Font name="System Bold Italic" size="21.0" />
         </font>
      </Label>
      <Button fx:id="btn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#clickedBtn" text="Click Me!" />
   </children>
</VBox>
